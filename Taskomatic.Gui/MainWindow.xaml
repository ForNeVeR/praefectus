<Window xmlns="https://github.com/avaloniaui"
        xmlns:core="clr-namespace:Taskomatic.Core;assembly=Taskomatic.Core"
        xmlns:local="clr-namespace:Taskomatic.Gui;assembly=Taskomatic.Gui"
        MinWidth="500"
        MinHeight="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Row="0" Grid.Column="0" Items="{Binding Issues}" SelectedItem="{Binding SelectedIssue}">
            <ListBox.DataTemplates>
                <DataTemplate DataType="core:IssueViewModel">
                    <TextBlock Text="{Binding FullInfo}"/>
                </DataTemplate>
            </ListBox.DataTemplates>
        </ListBox>
        <local:IssueDetailsView Grid.Row="0" Grid.Column="1" DataContext="{Binding SelectedIssue}" />

        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Command="{Binding LoadIssues}">Load issues</Button>
    </Grid>
</Window>
